global:
  env:
    - SLIM_MODE: production
db1:
  type: mysql

web1:
  name: mapabondi

  document_root: public
  apache_log_level: warnx

  php_date_timezone: "America/Argentina/San_Juan"
  php_default_locale: "es_AR"

  before_deploy:
    - "mysql -h $DB1_HOST --port $DB1_PORT -u $DB1_USER -p $DB1_PASS $DB1_NAME < mapabondi.sql"

  after_build:
    - "curl -s https://getcomposer.org/installer | php"
    - "php composer.phar install"